{
    "name": "inmanturbo/features",
    "description": "Pluggable feature system built on top of laravel/pennant",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Inmanturbo\\Features\\": "src/"
        }
    },
    "authors": [
        {
            "name": "inmanturbo"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Inmanturbo\\Features\\FeaturesServiceProvider"
            ]
        }
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "*"
    },
    "require": {
        "php": "^8.3",
        "laravel/pennant": "^1.18",
        "laravel/prompts": "^0.3.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage --min=80",
        "format": "pint",
        "format-test": "pint --test"
    }
}
